record(bi, "$(P):bGreenInd") {
    field(DESC, "bi record monitoring led 1")
    field(DTYP, "asynInt32")
    field(SCAN, "I/O Intr")
    field(INP,  "@asyn($(PORT) 0 0) BOOL R P=$(ADS_PORT) V=GVL_EPICS.bGreenInd")
    field(ZNAM, "Zero")
    field(ONAM, "One")
    field(UDFS, "NO_ALARM")
}

